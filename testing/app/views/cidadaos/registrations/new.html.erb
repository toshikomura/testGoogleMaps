<div id="texto">
<h2>Criar Conta Cidadão:</h2>

<div class="form">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field-required">
      <%= f.label :nome, "Nome*:" %><br />
      <%= f.text_field :nome, :autofocus => true %>
    </div>

    <div class="field-required">
      <%= f.label :rg, "RG*:" %><br />
      <%= f.text_field :rg %>
    </div>

    <div class="field-required">
      <%= f.label :cpf, "CPF*:" %> <i>(CPF será usado como sua identificação)</i><br />
      <%= f.text_field :cpf, :class => 'cpf' %>
    </div>

    <div class="field">
      <%= f.label :telefone1, "Telefone:" %><br />
      <%= f.text_field :telefone1, :class => 'phone' %>
    </div>

    <div class="field">
      <%= f.label :email, "E-mail:" %><br />
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :cartao_sus, "Cartão SUS:" %><br />
      <%= f.text_field :cartao_sus %>
    </div>

    <div class="field-required">
      <%= f.label :password, "Senha*:" %> <i>(mínimo 6 caracteres)</i><br />
      <%= f.password_field :password %>
    </div>

    <div class="field-required">
      <%= f.label :password_confirmation, "Confirmar Senha*:" %><br />
      <%= f.password_field :password_confirmation %>
    </div>

    <p><font color="red"> Campos com (*) são de preenchimento obrigatório.</font></p>

    <div class="actions">
      <%= f.submit "Criar Conta" %>
    </div>
  <% end %>
</div>

<%= render "cidadaos/shared/links" %>

</div>

<%= image_tag("calendario_exemplo.png", id: "calendario") %>
